<h1 class="page-header">Score Card</h1>
<p>
  <%= link_to "Add Team", new_team_path %>
</p>
<div class="table-responsive">
  <table class="table table-striped leaderboard table-bordered table-condensed small">
    <thead>
      <tr>
        <th></th>
        <%= render_numeric_cells @card.hole_names[0..8],   tag: :th, class: 'hole' %>
        <%= render_numeric_cell 'OUT',   tag: :th, class: 'hole calculated' %>
        <%= render_numeric_cells @card.hole_names[9..17], tag: :th, class: 'hole' %>
        <%= render_numeric_cell 'IN',    tag: :th, class: 'hole calculated' %>
        <%= render_numeric_cell 'TOTAL', tag: :th, class: 'calculated' %>
      </tr>
      <tr class="warning">
        <th>Length</th>
        <%= render_numeric_cells @card.hole_lengths[0..8] %>
        <%= render_numeric_cell  @card.hole_lengths[0..8].compact.sum, class: 'calculated' %>
        <%= render_numeric_cells @card.hole_lengths[9..17] %>
        <%= render_numeric_cell  @card.hole_lengths[9..17].compact.sum, class: 'calculated' %>
        <%= render_numeric_cell  @card.hole_lengths.compact.sum, class: 'calculated' %>
      </tr>
      <tr class="info">
        <th>Par</th>
        <%= render_numeric_cells @card.pars[0..8] %>
        <%= render_numeric_cell  @card.pars[0..8].compact.sum, class: 'calculated' %>
        <%= render_numeric_cells @card.pars[9..17] %>
        <%= render_numeric_cell  @card.pars[9..17].compact.sum, class: 'calculated' %>
        <%= render_numeric_cell  @card.pars.compact.sum, class: 'calculated' %>
      </tr>
      <tr class="success">
        <th>Best</th>
        <%= render_numeric_cells @card.bests[0..8] %>
        <%= render_numeric_cell  @card.bests[0..8].compact.sum, class: 'calculated' %>
        <%= render_numeric_cells @card.bests[9..17] %>
        <%= render_numeric_cell  @card.bests[9..17].compact.sum, class: 'calculated' %>
        <%= render_numeric_cell  @card.bests.compact.sum, class: 'calculated' %>
      </tr>
    </thead>
    <tbody>
      <%= render @card.teams -%>
    </tbody>
  </table>
</div>
